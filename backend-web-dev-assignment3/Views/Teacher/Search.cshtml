@model List<backend_web_dev_assignment3.Models.Teacher>

@{
    ViewBag.Title = "Search Results for Teachers";
}

<a class="backToPage" href="/Teacher/Index">Back to Search Page</a>

@if (Model.Count == 0)
{
    <p class="noResults">No Results exist!</p>
}
else
{
    <h2>Search Results for Teachers</h2>
    <div>
        @foreach (var teacher in Model)
        {
            <a href="/Teacher/Show/@teacher.teacherid">@teacher.teacherfname @teacher.teacherlname</a>
        }
    </div>

}


